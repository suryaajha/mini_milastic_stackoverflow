<!--Show Question-->
<%= render 'shared/show_content', locals = {resource: @question } %>

<h1> Answers </h1>

<!--Show All Answers-->
<% @question.answers.each do |answer| %>
  <%= render 'shared/show_content', locals = {resource: answer } %>
<% end %>

<!--Show Panel for writing answer-->
<% if user_signed_in? %>
  <%= render partial: 'shared/write_content', locals: {resource_name: 'Answer', resource_path: question_answers_path(@question)} %>
<% else %>
  <h1 class="display">
    To Answer You must be logged in!
  </h1>
  <%= render 'layouts/navbar/not_signed_in' %>
<% end %>

<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'></script>
<script src='/page_setup.js'></script>
